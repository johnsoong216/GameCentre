<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blackjack"
    tools:context=".BlackJackStartingActivity">

    <Button
        android:id="@+id/btBJLoad"
        android:layout_width="68dp"
        android:layout_height="63dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="356dp"
        android:background="@drawable/load_file"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btBJSave"
        android:layout_width="63dp"
        android:layout_height="56dp"
        android:layout_marginTop="356dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btBJNewGame"
        android:layout_width="68dp"
        android:layout_height="55dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="76dp"
        android:background="@drawable/newgame"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btBJLoad" />

    <Button
        android:id="@+id/btBJResume"
        android:layout_width="81dp"
        android:layout_height="74dp"
        android:layout_marginStart="204dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/resume"
        app:layout_constraintStart_toEndOf="@+id/btBJNewGame"
        app:layout_constraintTop_toBottomOf="@+id/btBJSave" />
</android.support.constraint.ConstraintLayout>