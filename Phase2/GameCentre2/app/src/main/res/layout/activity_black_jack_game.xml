<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBJBackground"
    tools:context=".BlackJackGameActivity">

    <Button
        android:id="@+id/btHit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="73dp"
        android:layout_marginTop="439dp"
        android:layout_marginEnd="73dp"
        android:layout_marginBottom="80dp"
        android:text="HIt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btStand"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btStand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="73dp"
        android:layout_marginTop="439dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="80dp"
        android:text="stand"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btHit"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btDouble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="438dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="81dp"
        android:text="double"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btStand"
        app:layout_constraintStart_toEndOf="@+id/btHit"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/dealerCard4"
        android:layout_width="55dp"
        android:layout_height="80dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="44dp"
        android:background="@color/colorWhite"
        app:layout_constraintStart_toEndOf="@+id/dealerCard3"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />

    <ImageView
        android:id="@+id/dealerCard5"
        android:layout_width="55dp"
        android:layout_height="80dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="28dp"
        android:background="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dealerCard4"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />

    <ImageView
        android:id="@+id/dealerCard3"
        android:layout_width="55dp"
        android:layout_height="80dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="44dp"
        android:background="@color/colorWhite"
        app:layout_constraintStart_toEndOf="@+id/dealerCard2"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />

    <ImageView
        android:id="@+id/deck"
        android:layout_width="105dp"
        android:layout_height="145dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="184dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/deck1" />

    <ImageView
        android:id="@+id/dealerCard2"
        android:layout_width="55dp"
        android:layout_height="80dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="44dp"
        android:background="@color/colorWhite"
        app:layout_constraintStart_toEndOf="@+id/dealerCard1"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />

    <ImageView
        android:id="@+id/dealerCard1"
        android:layout_width="55dp"
        android:layout_height="80dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="44dp"
        android:background="@color/colorWhite"
